<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Application</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="pageDiv">
        <div class="sidebar hidden">
            @if (ViewData["ShowSidebar"] == null || (bool)ViewData["ShowSidebar"])
            {
                @await Html.PartialAsync("_Sidebar")
            }
        </div>

        <main role="main" class="pageContainer">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="~/lib/chart.js/dist/chart.umd.js"></script>
    <script src="~/lib/chartjs-adapter-date-fns/dist/chartjs-adapter-date-fns.bundle.js"></script>
    <script src="~/lib/date-fns/cdn.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>

<style>
    .pageDiv {
        display: flex;
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }

    .sidebar {
        width: 250px;
        transition: width 0.3s ease;
        border-width: 0 2px 0 0;
        border-style: ridge;
        overflow: hidden;
        background-color: #304669;
    }

        .sidebar.hidden {
            width: 0;
        }

        .sidebar.show {
            width: 250px;
        }

    .pageContainer {
        flex: 1; /* 自動填滿剩餘空間 */
        transition: flex 0.3s ease;
        display: grid;
        align-items: flex-start;
        width: 100%;
    }
</style>
